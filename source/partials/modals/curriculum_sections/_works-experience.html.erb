<section class="cv-section">
  <div class="cv-section__head">
    <div class="cv-section__icon">
      <i class="fa fa-code"></i>
    </div>
    <h2 class="cv-section__label text-uppercase">Work experience</h2>
  </div>

  <% data.curriculum.prj.works_experience.each do |work| %>
    <%= partial("partials/shared/cv-block",
        locals: {
          label: work.label,
          title: work.title,
          description: work.description
        }
      )
    %>
  <% end %>

</section>
