<button type="button" class="item" data-toggle="modal" data-target="<%= id_item %>">
  <%= image_tag image_item, class: 'item__image img-responsive' %>
  <div class="hover-mask">
    <div class="item__info text-center">
      <h2 class="item__title text-uppercase">
        <%= title_item %><br>
        <i class="fa fa-minus"></i>
      </h2>
      <%= image_tag 'ico-white-eye.png', width: '40px', alt: 'ico eye' %>
    </div>
  </div>
</button>
